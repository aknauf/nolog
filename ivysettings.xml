<ivysettings>
    <settings defaultResolver="main-chain"/>
    <resolvers>
        <ibiblio name="public" m2compatible="true"/>
        <ibiblio name="local" m2compatible="true" root="file://${user.home}/.m2/repository"
                 changingPattern=".*SNAPSHOT"/>
        <filesystem name="release" m2compatible="true" checksums="sha1">
            <artifact
                    pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
        </filesystem>
        <chain name="main-chain">
            <resolver ref="public"/>
            <resolver ref="local"/>
        </chain>
    </resolvers>

</ivysettings>